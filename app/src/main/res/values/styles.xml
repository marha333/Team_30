<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">28sp</item>
    </style>
    <style name="Description" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Information" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ListName" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:textSize">8pt</item>
    </style>
    <style name="ListInfo" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/infoColor</item>
        <item name="android:textSize">6pt</item>
    </style>
    <style name="ListDescription" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/infoColor</item>
        <item name="android:textSize">6pt</item>
    </style>
    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:titleTextColor">?android:textColorPrimary</item>
        <item name="android:background">?backgroundColor</item>
    </style>

    <style name="RadioButtonText">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="detailedInfoName" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="detailedInfoDistance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
